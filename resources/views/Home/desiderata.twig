		<!-- The value of data-player must match the id of the media element -->
		<!-- see documentation for additional details -->
		<ul class="able-playlist" data-player="video1">

				<li  data-poster="/images/desiderata.jpg" data-width="480" data-height="360">
				<span class="able-source"
					data-type="video/mp4"
					data-src="/ablelvids/desiderata/desiderata.mp4">

		</span>

				<button type="button">
					<img src="/images/desiderata.jpg" alt="">Desiderata
				</button>
			</li>






			</ul>
			<br>
			<br>

			</div>


</div>


