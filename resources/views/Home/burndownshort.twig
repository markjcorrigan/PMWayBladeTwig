{% extends 'simplemedia.twig' %}
{% block title %} {% if not user %}PMWay{% endif %} {% if user %}Sprint
Burndown{% endif %}  {% endblock %}
{% block body %}
{% if user %}
<!--BODY-->

<div class="container">
<h3>The Sprint Burndown</h3>
<hr>
<p><a href="#playlist">PLAYLIST</a></p>
<div id="player" align="center">
  <!-- video source and track elements will be populated from playlist -->
  <video id="video1" preload="false" data-able-player playsinline loop></video>
</div>
<div id="playlist">
  <h2><a name="playlist"></a>Playlist</h2>
  <!-- an AblePlayer playlist is any <ul> with class="able-playlist" -->
  <!-- The value of data-player must match the id of the media element -->
  <!-- see documentation for additional details -->
  <ul class="able-playlist" data-player="video1">
    <li  data-poster="/images/burn_down_chart.png" data-width="480" data-height="360"> <span class="able-source"
					data-type="video/mp4"
					data-src="/ablelvids/burndownshort/burndownshort.mp4"> </span>
      <button type="button"> <img src="/images/burn_down_chart.png" alt="">SCRUM BURNDOWN! </button>
    </li>

	    <li  data-poster="/images/burn_down_chart.png" data-width="480" data-height="360"> <span class="able-source"
					data-type="video/mp4"
					data-src="/ablelvids/burndownshort/burndownup.mp4"> </span>
      <button type="button"> <img src="/images/burndownup.png" alt="">SCRUM BURNDOWN and BURNUP!! </button>
    </li>

	   <li  data-poster="/images/agreements.jpg" data-width="480" data-height="360"> <span class="able-source"
					data-type="video/mp4"
					data-src="/ablelvids/brokenpromises/brokenpromises.mp4"> </span>
      <button type="button"> <img src="/images/agreements.jpg" alt="">Agile and Broken Promises - the King and the Mysterious Stranger </button>
    </li>
  </ul>
  <br>
  <br>
</div>
<div align="center">
  <button class="btn btn-primary align-center clearfix" type="button" data-toggle=
"collapse" data-target="#collapseburn" aria-expanded="false" aria-controls=
        "collapseburn">Ski down the guideline (target burndown) </button>
  <div class="collapse" id="collapseburn">
    <div class="container">
      <div class="card text-center">
        <h5 class="card-header" align="center">The goal is to ski down the guideline (target burndown or delivery baseline); <br>
          staying as close to it as possible<br>
          dusting issues as you go!</h5>
        <div class="card-body text-center" > <img alt="" class="img-fluid" src="/images/skiingdownbaseline.jpg"  > </div>
      </div>
      <div class="card-footer"> </div>
    </div>
  </div>
</div>
<br>
<br>

<!--ENDBODY-->
{% endif %}

